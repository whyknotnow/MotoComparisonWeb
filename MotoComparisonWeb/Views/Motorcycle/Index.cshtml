@model List<KeyValuePair<string, string>>

@{
    ViewData["Title"] = "Select Motorcycles";
}

<h1 class="text-center">Select Motorcycles</h1>
<form asp-action="Compare" asp-controller="Motorcycle" method="post">
    <div class="form-group row">
        <label for="brand1" class="col-sm-2 col-form-label">Brand 1:</label>
        <div class="col-sm-10">
            <select name="brand1" id="brand1" class="form-control">
                <option value="">Select Brand</option>
                @foreach (var manufacturer in Model)
                {
                    <option value="@manufacturer.Value">@manufacturer.Key</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="model1" class="col-sm-2 col-form-label">Model 1:</label>
        <div class="col-sm-10 position-relative">
            <input type="text" id="model1" name="model1" class="form-control" autocomplete="off">
            <input type="hidden" id="modelUrl1" name="modelUrl1">
            <div class="suggestions"></div>
        </div>
    </div>
    <div class="form-group row">
        <label for="brand2" class="col-sm-2 col-form-label">Brand 2:</label>
        <div class="col-sm-10">
            <select name="brand2" id="brand2" class="form-control">
                <option value="">Select Brand</option>
                @foreach (var manufacturer in Model)
                {
                    <option value="@manufacturer.Value">@manufacturer.Key</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="model2" class="col-sm-2 col-form-label">Model 2:</label>
        <div class="col-sm-10 position-relative">
            <input type="text" id="model2" name="model2" class="form-control" autocomplete="off">
            <input type="hidden" id="modelUrl2" name="modelUrl2">
            <div class="suggestions"></div>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Compare</button>
    </div>
</form>